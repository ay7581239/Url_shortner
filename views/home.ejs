<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        body{    
    background-color: rgb(180, 244, 245);
            font-family: 'Times New Roman', Times, serif';
        }
    </style>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>home page</title>
</head>
<body>
    <h1>Short Url</h1>
    <div>
        <form method="post" action="/url">
            <label>Enter the url</label>
            <input type="text" placeholder="https://example.com" name="url">
            <button type="submit">Generate shortid</button>
        </form>
    </div>
<br><br>
<% if (locals.id) { %>
 <p>URL Generated: http://localhost:8001/url/<%= id %></p>
<% } %>
<% if (locals.totalClicks) { %>
    <p>Totalclicks:<%= totalClicks %></p>
    <p>Analytics:<%= analytics %></p>
   <% } %>
    <div><% if (locals.urls) { %>
    <table border="1">
        <tr><th>S no.</th>
            <th>Short Id</th>
            <th>RedirectURL</th>
            <th>visited</th>
        </tr>
    
    <% urls.forEach((url,index) => { %>
        <tr>
            <td>  <%= index+1 %></td>
        <td>  <%= url.shortId %></td>
        <td>  <%= url.redirectURL %></td>
        <td>  <%= url.visitHistory.length %></td>
    </tr>
    <% }) %>
</table><% } %>
</div>
</body>
</html>